-- == SERVICES UND GRUNDVARIABLEN ==
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- == Elerium laden ==
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/obeseinsect/roblox/main/Ui%20Libraries/Elerium.lua"))()

local Window = library:AddWindow("Elerium Dex Lite", {
    main_color = Color3.fromRGB(60, 60, 90),
    min_size = Vector2.new(500, 500),
    toggle_key = Enum.KeyCode.RightShift,
    can_resize = true,
})

-- == Explorer-Funktion ==
local function showChildren(tab, obj)
    tab:AddLabel(obj.Name .. " [" .. obj.ClassName .. "]")
    for _, child in ipairs(obj:GetChildren()) do
        tab:AddButton(child.Name .. " [" .. child.ClassName .. "]", function()
            -- Bei Klick: Properties anzeigen (in neuem Tab)
            local propTab = Window:AddTab(child.Name)
            propTab:AddLabel("Properties von: " .. child.Name)
            for _, prop in ipairs({"ClassName", "Name", "Parent", "Archivable"}) do
                local val
                pcall(function() val = child[prop] end)
                propTab:AddLabel(prop .. ": " .. tostring(val))
            end
            -- Mehr Properties auslesen (z.B. Position, Size, Value, Value.Value ...)
            for _, key in pairs(child:GetAttributes and child:GetAttributes() or {}) do
                propTab:AddLabel("Attr " .. key .. ": " .. tostring(child:GetAttribute(key)))
            end
        end)
    end
end

-- == Für alle Hauptservices einen Tab erstellen ==
local mainServices = {
    game.Workspace,
    game.Players,
    game.ReplicatedStorage,
    game.Lighting,
    game.StarterGui,
    game.StarterPack,
    game.StarterPlayer,
    game.SoundService,
    game.TweenService,
    game.HttpService
}

for _, svc in ipairs(mainServices) do
    local tab = Window:AddTab(svc.Name)
    showChildren(tab, svc)
end

-- Beispiel: Extra "game" Tab für globale Services
local gameTab = Window:AddTab("game")
showChildren(gameTab, game)

-- == Bedienung ==
-- Klick auf einen Service-Tab → Klick auf ein Child → Properties öffnen sich im neuen Tab

-- TIPP: 
-- Das ist der Start, du kannst Search, Aufklappen, Recursion, Property-Editor, Script-Viewer usw. beliebig einbauen!
